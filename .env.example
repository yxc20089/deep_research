# Required API Keys
TAVILY_API_KEY=
OPENAI_API_KEY=

# Optional: Other LLM providers (uncomment and add if needed)
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=

# Model Configuration
# Format: provider:model-name (e.g., openai:gpt-4.1, anthropic:claude-sonnet-4-20250514)
# SUMMARIZATION_MODEL=openai:gpt-4.1-mini
# RESEARCH_MODEL=openai:gpt-4.1
# COMPRESSION_MODEL=openai:gpt-4.1
# FINAL_REPORT_MODEL=openai:gpt-4.1

# Token Limits
# SUMMARIZATION_MODEL_MAX_TOKENS=8192
# RESEARCH_MODEL_MAX_TOKENS=10000
# COMPRESSION_MODEL_MAX_TOKENS=8192
# FINAL_REPORT_MODEL_MAX_TOKENS=10000

# Research Configuration
# SEARCH_API=tavily  # Options: tavily, openai, anthropic, none
# MAX_CONCURRENT_RESEARCH_UNITS=5
# MAX_RESEARCHER_ITERATIONS=6
# MAX_REACT_TOOL_CALLS=10
# ALLOW_CLARIFICATION=true

# Optional: LangSmith for tracing and monitoring
# LANGSMITH_API_KEY=
# LANGSMITH_PROJECT=
# LANGSMITH_TRACING=

# Only necessary for Open Agent Platform
# SUPABASE_KEY=
# SUPABASE_URL=
# GET_API_KEYS_FROM_CONFIG=false
